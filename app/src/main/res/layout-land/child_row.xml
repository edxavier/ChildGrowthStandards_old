<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card_container"
    card:cardElevation="3dp"
    card:cardCornerRadius="4dp"
    card:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/childImage"
                android:src="@drawable/baby_feets"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/gradient"
                android:background="@drawable/blue_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.edxavier.childgrowthstandards.helpers.MyTextView
                app:font="@string/FontRobotoLight"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/dimen_32_dp"
                android:textSize="@dimen/dimen_32_dp"
                android:textColor="@color/md_white_1000_75"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/txt_childName"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <com.edxavier.childgrowthstandards.helpers.MyTextView
                app:font="@string/FontRobotoRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 mes, 18 dias"
                android:textColor="@color/md_white_1000_75"
                android:id="@+id/txtChildAge"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/md_pink_500"
                    android:id="@+id/measuresContainer"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.edxavier.childgrowthstandards.helpers.MyTextView
                        android:id="@+id/measures"
                        android:layout_margin="@dimen/dimen_8_dp"
                        app:font="@string/FontRobotoRegular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:text="@string/most_recent"
                        android:textColor="@color/md_white_1000"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content" />

                    <com.edxavier.childgrowthstandards.helpers.MyTextView
                        android:id="@+id/lastMeasure"
                        android:layout_margin="@dimen/dimen_8_dp"
                        app:font="@string/FontRobotoRegular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:text="00-00-0000"
                        android:textColor="@color/md_white_1000"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/dimen_8_dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="@dimen/dimen_8_dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/balance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="@string/weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="----"
                            android:textSize="@dimen/dimen_16_dp"
                            app:font="@string/FontRobotoLight"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/weight" />

                    </LinearLayout>


                    <ImageView
                        android:layout_margin="@dimen/dimen_8_dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/height"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="@string/len_Height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="----"
                            android:textSize="@dimen/dimen_16_dp"
                            app:font="@string/FontRobotoLight"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/height" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_margin="@dimen/dimen_8_dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_margin="@dimen/dimen_8_dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/child_head"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="@string/perimeter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="----"
                            android:textSize="@dimen/dimen_16_dp"
                            app:font="@string/FontRobotoLight"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/perimeter" />

                    </LinearLayout>


                    <ImageView
                        android:layout_margin="@dimen/dimen_8_dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/baby_body"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="@string/imc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.edxavier.childgrowthstandards.helpers.MyTextView
                            android:text="----"
                            android:textSize="@dimen/dimen_16_dp"
                            app:font="@string/FontRobotoLight"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bmi" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/dimen_8_dp"
                    android:layout_marginRight="@dimen/dimen_8_dp"
                    android:layout_marginLeft="@dimen/dimen_8_dp"
                    android:layout_marginStart="@dimen/dimen_8_dp"
                    android:alpha="0.5"
                    android:id="@+id/divider"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/admob_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>