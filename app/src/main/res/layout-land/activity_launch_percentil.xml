<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edxavier.childgrowthstandards.LaunchPercentil">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <com.edxavier.childgrowthstandards.helpers.MyTextView
                android:text="@string/title_activity_main2"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:font="@string/FontPierRegular"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


        <LinearLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:padding="@dimen/dimen_8_dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinner"
                        android:layout_marginBottom="@dimen/dimen_8_dp"
                        android:layout_marginStart="@dimen/dimen_8_dp"
                        android:layout_marginLeft="@dimen/dimen_8_dp"
                        app:ms_arrow_tint="@color/white"
                        android:textColor="@color/white"
                        app:ms_background_color="@color/teal_400"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/zoom_in"
                            app:srcCompat="@drawable/ic_zoom_in"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            app:fabSize="mini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/zoom_out"
                            app:srcCompat="@drawable/ic_zoom_out"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            app:fabSize="mini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/calendar"
                        app:srcCompat="@drawable/calendar_2"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        app:fabSize="mini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginStart="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/login_input_error_appearance">

                        <EditText
                            android:drawablePadding="8dp"
                            android:enabled="false"
                            android:hint="@string/birthday"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:inputType="date"
                            android:id="@+id/txtChildBirthday" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <co.ceryle.radiorealbutton.library.RadioRealButtonGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    app:rrbg_bottomLineSize="0dp"
                    app:rrbg_dividerColor="@color/md_secondary_text_icons"
                    app:rrbg_dividerSize="1dp"
                    app:rrbg_selectorColor="@color/colorAccent"
                    app:rrbg_selectorSize="1dp"
                    app:rrbg_radius="4dp"
                    app:rrbg_shadow="true"
                    app:rrbg_shadowElevation="2dp"
                    app:rrbg_shadowMargin="3dp"
                    android:id="@+id/childGender">

                    <co.ceryle.radiorealbutton.library.RadioRealButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_image="@drawable/baby_boy"
                        app:rrb_imageHeight="24dp"
                        app:rrb_imageWidth="24dp"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/pink_200"
                        app:rrb_text="@string/boy"
                        app:rrb_textColor="@color/primary_text"/>

                    <co.ceryle.radiorealbutton.library.RadioRealButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:rrb_image="@drawable/baby_girl"
                        app:rrb_imageHeight="24dp"
                        app:rrb_imageWidth="24dp"
                        app:rrb_ripple="true"
                        app:rrb_rippleColor="@color/pink_200"
                        app:rrb_text="@string/girl"
                        app:rrb_textColor="@color/primary_text"/>
                </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_margin="@dimen/dimen_8_dp"
                            app:contentPadding="@dimen/dimen_8_dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/pesoContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:errorTextAppearance="@style/login_input_error_appearance">

                                    <EditText
                                        android:id="@+id/txtPeso"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/weight"
                                        android:inputType="numberDecimal|numberSigned"
                                        android:textSize="14sp" />
                                </android.support.design.widget.TextInputLayout>

                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:id="@+id/rdGroup_peso"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <RadioButton
                                        android:id="@+id/chk_lb_peso"
                                        android:textSize="12sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/lb_av" />
                                    <RadioButton
                                        android:id="@+id/chk_kg_peso"
                                        android:layout_width="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/kg_av" />
                                </RadioGroup>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_margin="@dimen/dimen_8_dp"
                            app:contentPadding="@dimen/dimen_8_dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/alturaContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:errorTextAppearance="@style/login_input_error_appearance">

                                    <EditText
                                        android:id="@+id/txtAltura"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/height"
                                        android:inputType="numberDecimal|numberSigned"
                                        android:textSize="14sp" />
                                </android.support.design.widget.TextInputLayout>

                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:id="@+id/rdGroup_altura"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <RadioButton
                                        android:id="@+id/chk_cm_altura"
                                        android:layout_width="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/cm_av" />
                                    <RadioButton
                                        android:id="@+id/chk_in_altura"
                                        android:textSize="12sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/in_av" />
                                </RadioGroup>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_margin="@dimen/dimen_8_dp"
                        app:contentPadding="@dimen/dimen_8_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/perimetroContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:errorTextAppearance="@style/login_input_error_appearance">

                                <EditText
                                    android:id="@+id/txtPerimetro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/cefalic_perimeter"
                                    android:inputType="numberDecimal|numberSigned"
                                    android:textSize="14sp" />
                            </android.support.design.widget.TextInputLayout>

                            <RadioGroup
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/rdGroup_perimetro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:id="@+id/chk_cm_perimetro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/cm_av" />
                                <RadioButton
                                    android:id="@+id/chk_in_perimetro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/in_av" />
                            </RadioGroup>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:id="@+id/admob_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>

            </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
            <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
