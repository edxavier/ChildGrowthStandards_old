<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16_dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.edxavier.childgrowthstandards.helpers.MyTextView
        android:id="@+id/childName"
        app:font="@string/FontRobotoMedium"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:text="@string/select_from"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_16_dp"
        android:layout_height="wrap_content" />

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ic_gallery"
        app:mrl_rippleColor="@color/pink_300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_marginStart="@dimen/dimen_16_dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.edxavier.childgrowthstandards.helpers.MyTextView
            app:font="@string/FontRobotoRegular"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_32_dp"
            android:layout_marginStart="@dimen/dimen_32_dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="@string/gallery"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ic_camera"
        app:mrl_rippleColor="@color/pink_300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_marginStart="@dimen/dimen_16_dp" android:layout_gravity="center"
            app:srcCompat="@drawable/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.edxavier.childgrowthstandards.helpers.MyTextView
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_32_dp"
            android:layout_marginStart="@dimen/dimen_32_dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:text="@string/camera"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>



</LinearLayout>