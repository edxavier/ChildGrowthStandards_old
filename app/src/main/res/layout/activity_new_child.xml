<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:id="@+id/coordinator"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.edxavier.childgrowthstandards.NewChild">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:fitsSystemWindows="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:id="@+id/childPicture"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/kid_on_beach"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


                <ImageView
                    app:srcCompat="@android:drawable/ic_menu_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ic_camera"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <com.edxavier.childgrowthstandards.helpers.MyTextView
                    android:text="@string/record_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    app:font="@string/FontPierRegular"
                    android:id="@+id/toolbar_title" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_marginTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_margin="8dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/file_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_margin="10dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/login_input_error_appearance"
                android:id="@+id/nameContainer">

                <EditText
                    android:hint="@string/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:id="@+id/txtChildName" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/genders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" />

            <co.ceryle.radiorealbutton.library.RadioRealButtonGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:rrbg_bottomLineSize="0dp"
                app:rrbg_dividerColor="@color/md_secondary_text_icons"
                app:rrbg_dividerSize="1dp"
                app:rrbg_selectorColor="@color/colorAccent"
                app:rrbg_selectorSize="1dp"
                app:rrbg_radius="4dp"
                app:rrbg_shadow="true"
                app:rrbg_shadowElevation="2dp"
                app:rrbg_shadowMargin="3dp"
                app:rrbg_animateTexts_enter="accelerate"
                app:rrbg_animateImages_enter="fastOutSlowIn"
                android:id="@+id/childGender">

                <co.ceryle.radiorealbutton.library.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_image="@drawable/baby_boy"
                    app:rrb_imageHeight="28dp"
                    app:rrb_imageWidth="28dp"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/pink_200"
                    app:rrb_text="@string/boy"
                    app:rrb_textColor="@color/primary_text"/>

                <co.ceryle.radiorealbutton.library.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_image="@drawable/baby_girl"
                    app:rrb_imageHeight="28dp"
                    app:rrb_imageWidth="28dp"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/pink_200"
                    app:rrb_text="@string/girl"
                    app:rrb_textColor="@color/primary_text"/>
            </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/calendar"
            app:srcCompat="@drawable/calendar_2"
            android:layout_gravity="center"
            android:layout_margin="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/login_input_error_appearance">

                <EditText
                    android:drawablePadding="8dp"
                    android:enabled="false"
                    android:hint="@string/birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="date"
                    android:id="@+id/txtChildBirthday" />
            </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:hint="@string/chk_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:id="@+id/chk_record_after_save" />

        <Button
            android:enabled="false"
            android:theme="@style/MaterialButton"
            android:layout_margin="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/btnSave"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/admob_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>


    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>




</android.support.design.widget.CoordinatorLayout>
