<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.edxavier.childgrowthstandards.NewHistoryRecord"
    tools:showIn="@layout/activity_new_history_record">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/baby_feets"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/md_teal_300"/>

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.edxavier.childgrowthstandards.helpers.MyTextView
                android:id="@+id/childName"
                android:layout_marginStart="@dimen/dimen_16_dp"
                android:layout_marginLeft="@dimen/dimen_16_dp"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:text="Liam Rojas"
                android:textSize="24sp"
                app:font="@string/FontRobotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="bottom"
                android:layout_marginEnd="@dimen/dimen_8_dp"
                android:layout_marginRight="@dimen/dimen_8_dp"
                android:layout_marginLeft="@dimen/dimen_8_dp"
                android:layout_marginStart="@dimen/dimen_8_dp"
                android:alpha="0.5"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/new_history_rec_entry"/>
        <include  android:visibility="gone" layout="@layout/new_record_old_layout"/>

        <LinearLayout
            android:id="@+id/dateContainer"
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/calendar"
                app:srcCompat="@drawable/calendar_2"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                app:backgroundTint="@color/md_blue_grey_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.edxavier.childgrowthstandards.helpers.MyTextView
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:font="@string/FontRobotoRegular"
                android:text="@string/measure_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.edxavier.childgrowthstandards.helpers.MyTextView
                android:gravity="center"
                android:id="@+id/txtDate"
                app:font="@string/FontRobotoLight"
                android:textSize="22sp"
                android:text="15-sept.-2016"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.edxavier.childgrowthstandards.helpers.MyTextView
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                app:font="@string/FontRobotoRegular"
                android:text="@string/dif_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
