<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="@dimen/dimen_8_dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calendar"
        app:srcCompat="@drawable/calendar_2"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/login_input_error_appearance">

        <EditText
            android:drawablePadding="8dp"
            android:enabled="false"
            android:hint="@string/birthday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:inputType="date"
            android:id="@+id/txtChildBirthday" />
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <co.ceryle.radiorealbutton.library.RadioRealButtonGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:rrbg_bottomLineSize="0dp"
        app:rrbg_dividerColor="@color/md_secondary_text_icons"
        app:rrbg_dividerSize="1dp"
        app:rrbg_selectorColor="@color/colorAccent"
        app:rrbg_selectorSize="1dp"
        app:rrbg_radius="4dp"
        app:rrbg_shadow="true"
        app:rrbg_shadowElevation="2dp"
        app:rrbg_shadowMargin="3dp"
        android:id="@+id/childGender">

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/baby_boy"
            app:rrb_imageHeight="24dp"
            app:rrb_imageWidth="24dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/pink_200"
            app:rrb_text="@string/boy"
            app:rrb_textColor="@color/primary_text"/>

        <co.ceryle.radiorealbutton.library.RadioRealButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_image="@drawable/baby_girl"
            app:rrb_imageHeight="24dp"
            app:rrb_imageWidth="24dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/pink_200"
            app:rrb_text="@string/girl"
            app:rrb_textColor="@color/primary_text"/>
    </co.ceryle.radiorealbutton.library.RadioRealButtonGroup>


    <com.edxavier.childgrowthstandards.helpers.MyTextView
        app:font="@string/FontRobotoRegular"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/weight"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/poundsContainer"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/login_input_error_appearance">
            <EditText
                android:id="@+id/txtPounds"
                android:gravity="center"
                android:hint="@string/pounds"
                android:text="7.2"
                android:inputType="numberDecimal|numberSigned"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_gravity="center"
            android:rotation="90"
            app:srcCompat="@drawable/unfold_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_weight="4"
            android:id="@+id/kilogramContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/login_input_error_appearance">

            <EditText
                android:gravity="center"
                android:text="0"
                android:id="@+id/txtKilogram"
                android:hint="@string/kilogram"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <com.edxavier.childgrowthstandards.helpers.MyTextView
        app:font="@string/FontRobotoRegular"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/len_Height"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/poundsContainerq"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/login_input_error_appearance">
            <EditText
                android:id="@+id/txtEstaturaCms"
                android:gravity="center"
                android:hint="@string/centimeter"
                android:text="50"
                android:inputType="numberDecimal|numberSigned"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_gravity="center"
            android:rotation="90"
            app:srcCompat="@drawable/unfold_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_weight="4"
            android:id="@+id/kilogramContaidner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/login_input_error_appearance">

            <EditText
                android:gravity="center"
                android:text="0"
                android:id="@+id/txtEstaturaInches"
                android:hint="@string/inches"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <com.edxavier.childgrowthstandards.helpers.MyTextView
        app:font="@string/FontRobotoRegular"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_width="match_parent"
        android:text="@string/cefalic_perimeter"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/poundsContainer1"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/login_input_error_appearance">
            <EditText
                android:id="@+id/txtCefalCm"
                android:gravity="center"
                android:hint="@string/centimeter"
                android:text="35"
                android:inputType="numberDecimal|numberSigned"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:layout_gravity="center"
            android:rotation="90"
            app:srcCompat="@drawable/unfold_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_weight="4"
            android:id="@+id/kilogramCondatainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/login_input_error_appearance">

            <EditText
                android:gravity="center"
                android:text="0"
                android:id="@+id/txtcefalInch"
                android:hint="@string/inches"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/admob_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <com.edxavier.childgrowthstandards.helpers.MyTextView
        app:font="@string/FontRobotoRegular"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:layout_marginLeft="@dimen/dimen_16_dp"
        android:layout_width="match_parent"
        android:text="@string/perc_chart"
        android:layout_height="wrap_content" />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_marginBottom="@dimen/dimen_8_dp"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        app:ms_arrow_tint="@color/accent"
        app:ms_background_color="@color/md_blue_grey_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/zoom_in"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/pink_300">

            <ImageButton
                android:id="@+id/zoom_in_btn"
                app:srcCompat="@drawable/ic_zoom_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/zoom_out"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/pink_300">

            <ImageButton
                android:layout_marginLeft="@dimen/dimen_8_dp"
                android:layout_marginStart="@dimen/dimen_8_dp"
                android:id="@+id/zoom_out_btn"
                app:srcCompat="@drawable/ic_zoom_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>



</LinearLayout>

</ScrollView>